<Window x:Class="TimeKeeperApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="320"
        Width="420"
        MinWidth="360"
        MinHeight="280"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource WindowForegroundBrush}"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Drift allowance (ms):" VerticalAlignment="Center" Margin="0,0,10,10" />
        <TextBox x:Name="DriftAllowanceTextBox"
                 Grid.Row="0" Grid.Column="1"
                 Width="100"
                 Margin="0,0,0,10" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Check interval (s):" VerticalAlignment="Center" Margin="0,0,10,10" />
        <TextBox x:Name="SyncIntervalTextBox"
                 Grid.Row="1" Grid.Column="1"
                 Width="100"
                 Margin="0,0,0,10" />

        <CheckBox x:Name="AutoStartCheckBox"
                  Grid.Row="2" Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Content="Auto start with Windows"
                  Margin="0,0,0,10" />

        <CheckBox x:Name="AllNotificationsCheckBox"
                  Grid.Row="3" Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Content="Enable all notifications"
                  Margin="0,0,0,10"
                  Checked="OnAllNotificationsChanged"
                  Unchecked="OnAllNotificationsChanged" />

        <CheckBox x:Name="AdjustmentNotificationsCheckBox"
                  Grid.Row="4" Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Content="Notify on time adjustment"
                  Margin="0,0,0,10" />

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Theme:" VerticalAlignment="Center" Margin="0,0,10,10" />
        <StackPanel x:Name="ThemeOptionsPanel"
                    Grid.Row="5" Grid.Column="1"
                    Margin="0,0,0,10"
                    Orientation="Vertical" />

        <TextBlock Grid.Row="6" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Text="Changes take effect immediately after saving."
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource MutedForegroundBrush}" />

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save"
                    Width="90"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="OnSaveSettings" />
            <Button Content="Cancel"
                    Width="90"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
